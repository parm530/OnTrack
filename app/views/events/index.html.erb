<p id="notice"><%= notice %></p>

<div class="center">
  <h1>Events</h1>
</div><br>
<%= button_to 'New Event', new_event_path, method: "get" %><br>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><h2><%= event.description %></h2></td>
        <td><h2><%= event.start_time %></h2></td>
        <td><h2><%= link_to 'Show', event %></h2></td>
        <td><h2><%= link_to 'Edit', edit_event_path(event) %></h2></td>
        <td><h2><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></h2></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

